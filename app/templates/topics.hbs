<div class="row offline-topics">

  <div class="col-md-3">
    <div class="bs-sidebar hidden-print affix-top" role="complementary">
      Offline Topics:
      <ul class="nav bs-sidenav">
        <ul>

          {{#each topic in model.content }}
          <li>
            {{#link-to 'topics.topic' topic.id }} {{ topic.title }} {{/link-to}}
          </li>
          {{/each}}

        </ul>

    </div>
  </div>
  <div class="col-md-9" role="main">
    {{ outlet }}
  </div>
</div>

<div class="row">
  <div class="well">
    <div>
      {{#if offlineTopicsCount}}
      <span>You have {{ offlineTopicsCount }} topics viewable offline. {{#link-to 'categories' }} Go online to add more. {{/link-to}}</span>
      {{else}}
      <span>You do not have topics viewable offline. {{#link-to 'categories' }} Go online to add some. {{/link-to}}</span>
      {{/if}}
    </div>

    <div>
      <a href="" {{action 'destroyAllOfflineTopics'}} >Remove all offline topics</a>
    </div>

    {{#if controllers.Application.navigatorIsOnline }}
    <span>Application says: Navigator is online</span>
    {{else}}
    <span>Application says: Navigator is online</span>
    {{/if}} {{#if controllers.Application.networkIsOnline }}
    <span>Application says: Network is online</span>
    {{else}}
    <span>Application says: Network is online</span>
    {{/if}}
  </div>
</div>
